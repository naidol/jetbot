<?xml version="1.0"?>
<robot name="jetbot" xmlns:xacro="http://ros.org/wiki/xacro">
    <!-- SETUP THE BASE_FOOTPRINT AND RELATED LINKS  -->
    <link name="base_footprint">
    </link>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.500 0.330 0.020"/>
            </geometry>
            <material name="gray">
                <color rgba="0.2 0.2 0.2 1"/>
            </material>
        </visual>
        <inertial>
            <mass value="5"/>
            <inertia ixx="0.045375" ixy="0.0" ixz="0.0"
                     iyy="0.104167" iyz="0.0"
                     izz="0.149542"/>
        </inertial>
        <collision>
            <geometry>
                <box size="0.500 0.330 0.020"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_to_footprint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.080" rpy="0 0 0"/>
    </joint>

    <link name="wheel_front_left_link">
        <visual>
            <geometry>
                <cylinder radius="0.040" length="0.035"/>
            </geometry>
            <material name="white">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
        <inertial>
            <mass value="0.3"/>
            <inertia ixx="0.0151" ixy="0.0" ixz="0.0"
                     iyy="0.0151" iyz="0.0"
                     izz="0.024"/>
        </inertial>
        <collision>
            <geometry>
                <cylinder radius="0.040" length="0.035"/>
            </geometry>
        </collision>
    </link>

    <joint name="wheel_front_left_joint" type="continuous">
        <origin xyz="0.170 0.200 -0.050" rpy="1.57 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_front_left_link"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>

    <link name="wheel_rear_left_link">
        <visual>
            <geometry>
                <cylinder radius="0.040" length="0.035"/>
            </geometry>
            <material name="white">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
        <inertial>
            <mass value="0.3"/>
            <inertia ixx="0.00151" ixy="0.0" ixz="0.0"
                     iyy="0.00151" iyz="0.0"
                     izz="0.0024"/>
        </inertial>
        <collision>
            <geometry>
                <cylinder radius="0.040" length="0.035"/>
            </geometry>
        </collision>
    </link>

    <joint name="wheel_rear_left_joint" type="continuous">
        <origin xyz="-0.170 0.200 -0.050" rpy="1.57 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_rear_left_link"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>

    <link name="wheel_front_right_link">
        <visual>
            <geometry>
                <cylinder radius="0.040" length="0.035"/>
            </geometry>
            <material name="white">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
        <inertial>
            <mass value="0.3"/>
            <inertia ixx="0.00151" ixy="0.0" ixz="0.0"
                     iyy="0.00151" iyz="0.0"
                     izz="0.0024"/>
        </inertial>
        <collision>
            <geometry>
                <cylinder radius="0.040" length="0.035"/>
            </geometry>
        </collision>
    </link>

    <joint name="wheel_front_right_joint" type="continuous">
        <origin xyz="0.170 -0.200 -0.050" rpy="1.57 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_front_right_link"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>

    <link name="wheel_rear_right_link">
        <visual>
            <geometry>
                <cylinder radius="0.040" length="0.035"/>
            </geometry>
            <material name="white">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
        <inertial>
            <mass value="0.3"/>
            <inertia ixx="0.0151" ixy="0.0" ixz="0.0"
                     iyy="0.0151" iyz="0.0"
                     izz="0.024"/>
        </inertial>
        <collision>
            <geometry>
                <cylinder radius="0.040" length="0.035"/>
            </geometry>
        </collision>
    </link>

    <joint name="wheel_rear_right_joint" type="continuous">
        <origin xyz="-0.170 -0.200 -0.050" rpy="1.57 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_rear_right_link"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>

    <link name="camera_link">
        <visual>
            <geometry>
                <box size="0.040 0.070 0.050"/>
            </geometry>
            <material name="blue">
                <color rgba="0.1 0.2 0.4"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.040 0.070 0.050"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.010"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0"
                     iyy="0.01" iyz="0.0"
                     izz="0.01"/>
        </inertial>
    </link>

    <joint name="camera_joint" type="fixed">
        <origin xyz="0.190 0.000 0.025" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="camera_link"/>
    </joint>

    <!-- SETUP THE RP-LIDAR A1 -->
    <link name="lidar_link">
        <visual>
            <geometry>
                <cylinder radius="0.040" length="0.025"/>
            </geometry>
            <material name="red">
                <color rgba="0.6 0.1 0.1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.040" length="0.025"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.010"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0"
                     iyy="0.01" iyz="0.0"
                     izz="0.01"/>
        </inertial>
